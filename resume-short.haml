        .job{
          margin-top: 7px;
          float: right;
          width: 95%;
        }

        .jobDescription{
          margin-top: 8px;
          padding-left: 25px;
          color: #444444;
        }

        .autodesk{
          margin-top: 10px;
        }

        .verticalBar{
          margin-top: 15px;
          margin-left: 16px;
          border-left: 3px solid #abbaab;
        }

        image{
          image-rendering: pixelated;
        }

        hr{
          margin-top: 2px;
        }

        .alignCenter{
          text-align: center;
        }

        .circles{
          color: #555;
          font-size: 20px;
          line-height: 1em;
          letter-spacing: 0.08em;
        }

        tr.projectRow > td{
          padding-bottom: 13px;
        }

        table.projectsTable{
          table-layout: fixed;
        }

